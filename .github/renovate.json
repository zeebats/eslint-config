{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":automergeMinor",
		":disableDependencyDashboard",
		"schedule:weekends"
	],
	"packageRules": [
		{
			"automerge": true,
			"automergeType": "branch",
			"matchDepTypes": ["peerDependencies"],
			"rangeStrategy": "replace"
		}
	],
	"timezone": "Europe/Amsterdam"
}
